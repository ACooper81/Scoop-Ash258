{
    "version": "4.0.40.0",
    "description": "NetLimiter. Internet traffic control and monitoring tool designed for Windows.",
    "homepage": "https://www.netlimiter.com/",
    "license": {
        "identifier": "Freeware"
    },
    "url": "https://www.netlimiter.com/files/download/nl4/netlimiter-4.0.40.0.exe",
    "hash": "c9c8be41d357f096d9a0592aa2d2692f901f2f1cc15b4f0fbb40a7ce4159b81b",
    "installer": {
        "args": [
            "/extract:\"$env:TMP\"",
            "/exenoui",
            "/exenoupdates",
            "/qn",
            "APPDIR=\"$dir\"",
            "/l*v \"$dir\\installing.log\""
        ]
    },
    "uninstaller": {
        "script": [
            "$ID = (Get-WmiObject Win32_Product -Filter \"Name = 'NetLimiter 4'\").IdentifyingNumber",
            "msiexec.exe /x $ID /qn NL_CLEAN_SETTINGS=1"
        ]
    },
    "checkver": {
        "url": "https://www.netlimiter.com/releases",
        "regex": "NetLimiter ([\\d+\\.]+)"
    },
    "autoupdate": {
        "url": "https://www.netlimiter.com/files/download/nl4/netlimiter-$version.exe"
    }
}

    "installer": {
        "args": [
            "/sAll",
            "/rs",
            "/msi",
            "INSTALLDIR=\"$dir\"",
            "EULA_ACCEPT=YES",
            "SUPPRESS_APP_LAUNCH=YES"
        ]
    },
    "uninstaller": {
        "script": [
            "$ID = (Get-CimInstance Win32_Product -Filter \"Name = 'Adobe Acrobat DC'\").IdentifyingNumber",

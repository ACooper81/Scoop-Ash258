{
    "version": "1.A4",
    "description": "Easy2boot. USB multiboot solution (Legacy+UEFI).",
    "homepage": "http://www.easy2boot.com/",
    "license": {
        "identifier": "Freeware",
        "url": "http://www.easy2boot.com/contact-us/licensing/"
    },
    "depends": "MPI",
    "url": "http://files.easy2boot.com/200003308-753d17635a/Easy2Boot_v1.A4_DPMS.exe",
    "hash": "6ba693cde2ba724aff7b00558d92b68314add89f32e50e206d87a1fd62dad39f",
    "installer": {
        "script": [
            "    # Download MPI",
            "$MPI = \"$dir\\_MPI\"",
            "if (!(Test-Path \"$persist\\_MPI\")) { New-Item $MPI -Type Directory | Out-Null }",
            "Copy-Item \"$(Resolve-Path (scoop prefix MPI))\\*\" $MPI -Force -Recurse",
            "scoop uninstall MPI",
            "    # Run installer",
            "#& \"$MPI\\ImDisk\\imdiskinst.exe\"",
            "    # Create shortcuts",
            "#& \"$MPI\\CreateDesktopShortcuts.cmd\""
        ]
    },
    "innosetup": true,
    "persist": [
        "_ISO",
        "_MPI"
    ],
    "shortcuts": [
        [
            "Make_E2B.exe",
            "Easy2Boot"
        ]
    ],
    "checkver": {
        "url": "http://www.easy2boot.com/download/",
        "regex": "href=\"http://files.easy2boot.com/(?<cosi>\\d+-\\w+)/Easy2Boot_v(?<ver>[\\w+\\.]+)_DPMS.exe\"",
        "replace": "${ver}"
    },
    "autoupdate": {
        "url": "http://files.easy2boot.com/$matchCosi/Easy2Boot_v$matchVer_DPMS.exe"
    }
}

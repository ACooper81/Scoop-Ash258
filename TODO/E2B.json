{
    "version": "1.B5",
    "description": "Easy2boot. USB multiboot solution (Legacy+UEFI).",
    "homepage": "http://www.easy2boot.com/",
    "license": {
        "identifier": "Freeware",
        "url": "http://www.easy2boot.com/contact-us/licensing/"
    },
    "depends": "MPI",
    "url": "https://www.fosshub.com/Easy2Boot.html?dwl=Easy2Boot_v1.B5_DPMS.exe#/cosi.7z",
    "hash": "ed29017fd17deb9a85d95e3dcbe39efc96a60dd401d01a26412d4fce0c902548",
    "installer": {
        "script": [
            "    # Download MPI",
            "$MPI = \"$dir\\_MPI\"",
            "if (-not (Test-Path \"$persist\\_MPI\")) { New-Item $MPI -Type Directory | Out-Null }",
            "Copy-Item \"$(appdir MPI $global))\\*\" $MPI -Force -Recurse",
            "scoop uninstall MPI",
            "    # Run installer",
            "#& \"$MPI\\ImDisk\\imdiskinst.exe\"",
            "    # Create shortcuts",
            "#& \"$MPI\\CreateDesktopShortcuts.cmd\""
        ]
    },
    "innosetup": true,
    "persist": [
        "_ISO",
        "_MPI"
    ],
    "shortcuts": [
        [
            "Make_E2B.exe",
            "Easy2Boot"
        ]
    ],
    "checkver": {
        "url": "http://www.easy2boot.com/download/",
        "regex": "Easy2Boot_v([\\w.]+)_DPM"
    },
    "autoupdate": {
        "url": "https://www.fosshub.com/Easy2Boot.html?dwl=Easy2Boot_v$version_DPMS.exe#/cosi.7z",
        "hash": {
            "mode": "fosshub"
        }
    }
}

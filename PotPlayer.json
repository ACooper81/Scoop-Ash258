    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$*\" -Force -Recurse",
            "$setFiles = @('PotPlayerMini64.ini', 'PotPlayerMini.ini', 'PotPlayer64.ini', 'PotPlayer.ini')",
            "foreach ($f in $setFiles) {",
            "    if (!(Test-Path \"$persist_dir\\$f\")) {",
            "        $cont = \"[Settings]`r`nAutoDownloadFile=0`r`nAutoPlayOnStart=1`r`nAutoUpdateStart=0`r`nCheckAutoUpdate=0`r`n\"",
            "        $cont += \"RememberPosition=1`r`nRememberPositionAudio=1`r`nSkinPopupMenuStyle=2`r`nScreenFitMode=2`r`n\"",
            "        $cont += \"MediaKeyGlobal=1`r`nFastAutoUpdate=0`r`nVideoRen2=15\"",
            "        Write-Host 'File' $f 'does not exists' -f Yellow",
            "        Set-Content \"$dir\\$f\" $cont -Encoding ascii",
            "    }",
            "}"
        ]
    },
    "persist": [
        "Capture",
        "Playlist",
        "PotPlayer.ini",
        "PotPlayer64.ini",
        "PotPlayerMini.ini",
        "PotPlayerMini64.ini"
    ],
    "checkver": {
        "url": "http://potplayer.daum.net/update.html?lang=en&bit",
        "re": "\\[([\\d+\\.]+)\\]"

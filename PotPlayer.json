    "installer": {
        "script": [
            "Remove-Item \"$dir\\`$*\" -Force -Recurse",
            "$setFiles = @('PotPlayerMini64.ini', 'PotPlayerMini.ini', 'PotPlayer64.ini', 'PotPlayer.ini')",
            "foreach ($f in $setFiles) {",
            "    if (!(Test-Path \"$persist_dir\\$f\")) {",
            "        Write-Host 'File' $f 'does not exists. Creating -f Yellow",
            "        $CONT = @(",
            "            '[Settings]', 'AutoDownloadFile=0', 'AutoPlayOnStart=1', 'AutoUpdateStart=0', 'CheckAutoUpdate=0',",
            "            'RememberPosition=1', 'RememberPositionAudio=1', 'SkinPopupMenuStyle=2', 'ScreenFitMode=2',",
            "            'MediaKeyGlobal=1', 'FastAutoUpdate=0', 'nVideoRen2=15', 'SavePlayPosPL=1', 'AutoAddPL=1', 'AutoDetectTimePL=1',",
            "            'AppendFilePL=1', 'DropMousePos=1'",
            "        )",
            "        Set-Content \"$dir\\$f\" ($CONT -join \"`r`n\") -Encoding Ascii",
            "    }",
            "}"
        ]
    },
    "persist": [
        "Capture",
        "Playlist",
        "PotPlayer.ini",
        "PotPlayer64.ini",
        "PotPlayerMini.ini",
        "PotPlayerMini64.ini"
    ],
    "checkver": {
        "url": "http://potplayer.daum.net/update.html?lang=en&bit",
        "re": "\\[([\\d+\\.]+)\\]"

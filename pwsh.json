    "installer": {
        "script": [
            "    # Create reg file",
            "$PWSH_PATH = \"$dir\".Replace('\\', '\\\\')",
            "$REG_FILE = \"$dir\\pwsh-context-ins.reg\"",
            "$content = Get-Content $REG_FILE",
            "$content = $content.Replace('%%dir%%', $PWSH_PATH)",
            "Set-Content $REG_FILE $content -Encoding Ascii",
            "    # Append registry",
            "regedit /s $REG_FILE"
        ]

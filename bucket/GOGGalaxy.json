    "installer": {
        "script": [
            "& (Get-HelperPath 'innounp') -x \"$dir\\$fname\" -d\"$dir\" | Out-Null",
            "movedir \"$dir\\{%ALLUSERSPROFILE}\" $env:ALLUSERSPROFILE | Out-Null",
            "Get-ChildItem \"$dir\" -Exclude '{app}' | Remove-Item -Force -Recurse",
            "Move-Item \"$dir\\{app}\\*\" \"$dir\"",

{
    "version": "2.10.421",
    "description": "CloneApp. Backs up All Windows program settings.",
    "homepage": "https://www.myclone.app/",
    "license": "Freeware",
    "url": "https://www.myclone.app/download/cloneapp/send/2-cloneapp/19-cloneapp#/cosi.zip",
    "hash": "md5:523675977d517c4316e8d5db9a20c56d",
    "extract_dir": "CloneApp",
    "pre_install": [
        "$file = 'cloneapp.ini'",
        "if (-not (Test-Path \"$persist_dir\\$file\")) {",
        "    Write-Host 'File' $file 'does not exists. Creating.' -f Yellow",
        "    $to = \"$(Split-Path \"$dir\")\\current\"",
        "    $file = \"$dir\\Data\\$file\"",
        "    $CONT = @(",
        "        '[Settings]'",
        "      , \"ClonePath=$to\\Backup\\\"",
        "      , \"LogPath=$to\\Backup\\\"",
        "      , 'EditorPath=$AppEditor$' ",
        "    )",
        "    New-Item $file -Type File | Out-Null",
        "    Set-Content $file ($CONT -join \"`r`n\") -Encoding Ascii",
        "}"
    ],
    "persist": [
        "BackUp",
        "Data\\cloneapp.ini"
    ],
    "bin": "CloneApp.exe",
    "shortcuts": [
        [
            "CloneApp.exe",
            "CloneApp"
        ]
    ],
    "checkver": {
        "url": "https://www.myclone.app/downloads/ca_update/changelog.txt",
        "regex": "Changelog v([\\d\\.]+)"
    },
    "autoupdate": {
        "url": "https://www.myclone.app/download/cloneapp/send/2-cloneapp/19-cloneapp#/cosi.zip",
        "hash": {
            "url": "https://www.myclone.app/download/cloneapp",
            "regex": "MD5 Checksum: ($md5)"
        }
    }
}

{
    "version": "2018-0728",
    "description": "Air For Steam. An elegant and customizable skin for Steam.",
    "homepage": "http://airforsteam.com/",
    "license": {
        "identifier": "CC-BY-NC-4.0",
        "url": "https://github.com/Outsetini/Air-for-Steam/blob/master/LICENSE.txt"
    },
    "notes": [
        "Now you can just copy eveything into Steam\\skins folder.",
        "After copying you can uninstall with 'scoop uninstall AirForSteam'."
    ],
    "url": "https://github.com/Outsetini/Air-for-Steam/archive/2018-0728.zip",
    "hash": "e397fa63f5586bd21cf6f3e52f0af683c8e9286586652a1856adae022be255b3",
    "extract_dir": "Air-for-Steam-2018-0728",
    "installer": {
        "script": [
            "$extras = \"$dir\\+Extras\"",
            "$filesArray = @(\"$dir\\Support Air on Patreon.url\", \"$dir\\README.md\", \"$dir\\LICENSE.txt\", \"$dir\\FAQ.url\", ",
            "    \"$dir\\Contributors.url\", \"$dir\\Changelog.url\", \"$dir\\.gitattributes\", \"$extras\\Fonts\", \"$extras\\Square Avatars\"",
            ")",
            "Copy-Item \"$extras\\Themes\\Dark\\*\" \"$dir\" -Force -Recurse",
            "Remove-Item $filesArray -Force -Recurse",
            "       # Replacing Default Theme",
            "$find = 'include \"resource/colors/sky.styles\"'",
            "$replace = \"//$find\"",
            "$file = \"$dir\\config.ini\"",
            "(Get-Content $file).Replace($find, $replace) | Set-Content $file",
            "       # Enabling Pixeldark Theme",
            "$find = '//include \"resource/colors/user/pixeldark.styles\"'",
            "$replace = 'include \"resource/colors/user/pixeldark.styles\"'",
            "(Get-Content $file).Replace($find, $replace) | Set-Content $file"
        ]
    },
    "checkver": {
        "url": "https://github.com/Outsetini/Air-for-Steam/releases",
        "re": "<span class=\"css-truncate-target\">((\\d{4})-(\\d{2})(\\d{2}))</span>"
    },
    "autoupdate": {
        "url": "https://github.com/Outsetini/Air-for-Steam/archive/$version.zip",
        "extract_dir": "Air-for-Steam-$version"
    }
}

{
    "version": "nightly",
    "description": "Steam. The ultimate entertainment platform.",
    "homepage": "https://store.steampowered.com/",
    "notes": "Changing Steam library folder is HIGHLY recommended.",
    "suggest": {
        "Skins": [
            "AirSkin"
        ]
    },
    "url": "https://steamcdn-a.akamaihd.net/client/installer/SteamSetup.exe",
    "pre_install": [
        "foreach ($fold in @(\"skins\", \"steamapps\", \"userdata\")) {",
        "    if (!(Test-Path \"$persist_dir\\$fold\")) {",
        "        Write-Host \"No $fold folder\" -f Yellow",
        "        New-Item \"$dir\\$fold\" -Type Directory | Out-Null",
        "    }",
        "}"
    ],
    "installer": {
        "args": [
            "/S",
            "/D=\"$dir\""
        ]
    },
    "uninstaller": {
        "file": "uninstall.exe",
        "args": [
            "/S"
        ]
    },
    "persist": [
        "skins",
        "steamapps",
        "userdata"
    ],
    "shortcuts": [
        [
            "Steam.exe",
            "Steam"
        ]
    ]
}

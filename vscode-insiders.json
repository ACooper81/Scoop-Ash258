{
    "version": "1.25.0-insider",
    "license": "https://code.visualstudio.com/License",
    "description": "New type of tool that combines the simplicity of a code editor with what developers need for their core edit-build-debug cycle.",
    "homepage": "https://code.visualstudio.com/",
    "architecture": {
        "64bit": {
            "url": "https://vscode-update.azurewebsites.net/1.25.0-insider/win32-x64-archive/insider#/cosi.zip"
        },
        "32bit": {
            "url": "https://vscode-update.azurewebsites.net/1.25.0-insider/win32-archive/insider#/cosi.zip"
        }
    },
    "extract_to": "Code",
    "post_install": [
        "if(!(Test-Path $dir\\code-insiders-portable-data)) { ",
        "    New-Item $dir\\code-insiders-portable-data -Type Directory | Out-Null }",
        "    New-Item $dir\\code-insiders-portable-data\\tmp -Type Directory | Out-Null",
        "    if(!(Test-Path $dir\\code-insiders-portable-data\\user-data)) { New-Item $dir\\code-insiders-portable-data\\user-data -Type Directory | Out-Null }",
        "    if(!(Test-Path $dir\\code-insiders-portable-data\\extensions)) { New-Item $dir\\code-insiders-portable-data\\extensions -Type Directory | Out-Null }",
        "}"
    ],
    "persist": [
        "code-insiders-portable-data"
    ],
    "bin": [
        "Code\\bin\\code-insiders.cmd",
        "Code\\Code - Insiders.exe"
    ],
    "shortcuts": [
        [
            "Code\\Code - Insiders.exe",
            "Visual Studio Code Insiders"
        ]
    ],
    "checkver": {
        "url": "https://code.visualstudio.com/sha?build=insider",
        "jp": "$.products[?(@.platform.os == 'win32-x64-archive')].name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://vscode-update.azurewebsites.net/$version/win32-x64-archive/insider#/cosi.zip"
            },
            "32bit": {
                "url": "https://vscode-update.azurewebsites.net/$version/win32-archive/insider#/cosi.zip"
            }
        }
    }
}

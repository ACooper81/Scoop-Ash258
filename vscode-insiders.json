{
    "version": "nightly",
    "description": "Microsoft Visual Studio Code Insiders. New type of tool that combines the simplicity of a code editor with what developers need for their core edit-build-debug cycle.",
    "homepage": "https://code.visualstudio.com/insiders",
    "license": {
        "identifier": "MIT",
        "url": "https://code.visualstudio.com/license/insiders"
    },
    "notes": "When there is vscode update available run 'scoop update vscode-insiders -f'",
    "architecture": {
        "64bit": {
            "url": [
                "https://vscode-update.azurewebsites.net/latest/win32-x64-archive/insider#/cosi.zip",
                "https://raw.github.com/lukesampson/scoop-extras/master/scripts/vscode-install-context.reg",
                "https://raw.github.com/lukesampson/scoop-extras/master/scripts/vscode-uninstall-context.reg"
            ]
        },
        "32bit": {
            "url": [
                "https://vscode-update.azurewebsites.net/latest/win32-archive/insider#/cosi.zip",
                "https://raw.github.com/lukesampson/scoop-extras/master/scripts/vscode-install-context.reg",
                "https://raw.github.com/lukesampson/scoop-extras/master/scripts/vscode-uninstall-context.reg"
            ]
        }
    },
    "post_install": [
        "$port = \"$dir\\data\"",
        "    # Create data folder",
        "if(!(Test-Path \"$persist_dir\\data\")) { ",
        "    Write-Host 'No user data folder exists' -f Yellow",
        "    New-Item \"$port\\tmp\", \"$port\\user-data\", \"$port\\extensions\" -Force -Type Directory | Out-Null",
        "}",
        "    # Create install context file",
        "$codepath = \"$dir\\Code - Insiders.exe\".Replace('\\', '\\\\')",
        "$content = Get-Content \"$dir\\vscode-install-context.reg\"",
        "$content = $content.Replace('$code', $codepath)",
        "$content = $content.Replace('&Code', 'Code &Insiders')",
        "Set-Content \"$dir\\vscode-install-context.reg\" $content",
        "    # Create uninstall context file",
        "$content = Get-Content \"$dir\\vscode-uninstall-context.reg\"",
        "$content = $content.Replace('&Code', 'Code &Insiders')",
        "Set-Content \"$dir\\vscode-uninstall-context.reg\" $content",
        "    # Apply context automatically",
        "regedit /s \"$dir\\vscode-install-context.reg\""
    ],
    "uninstaller": {
        "script": [
            "    # Uninstall context menu",
            "regedit /s \"$dir\\vscode-uninstall-context.reg\""
        ]
    },
    "persist": "data",
    "bin": [
        "bin\\code-insiders.cmd",
        "Code - Insiders.exe"
    ],
    "shortcuts": [
        [
            "Code - Insiders.exe",
            "Visual Studio Code Insiders"
        ]
    ]
}

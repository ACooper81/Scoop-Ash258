{
    "version": "0.0.5-7123",
    "description": "RPCS3. PS3 emulator/debugger.",
    "homepage": "https://rpcs3.net/",
    "license": {
        "identifier": "GPL-2.0",
        "url": "https://github.com/RPCS3/rpcs3/blob/master/LICENSE"
    },
    "notes": [
        "Install firmware via 'File -> Install firmware'.",
        "Latest firmware file is located inside app directory ('PS3UPDAT.PUP').",
        "HOW TO INSTALL GAME:",
        "1.   Download games from 'http://psndl.net/packages'",
        "1.1.         Both files ('Rap', 'Package') are needed",
        "2.   Install via 'File -> Install .pkg'",
        "3.   Copy RAP file and paste it into '$dir\\dev_hdd0\\home\\00000001\\exdata'",
        "4.   Enjoy the game <3"
    ],
    "depends": "vcredist2015",
    "architecture": {
        "64bit": {
            "url": [
                "https://github.com/RPCS3/rpcs3-binaries-win/releases/download/build-c5c0f68b3eb73a53f3a8ab404696d0bc1af234c7/rpcs3-v0.0.5-7123-c5c0f68b_win64.7z",
                "http://dus01.ps3.update.playstation.net/update/ps3/image/us/2017_1113_152d950c365ede4130c53ceb18dcd43b/PS3UPDAT.PUP"
            ],
            "hash": [
                "41C5C6AE109B4B63D2BF93DC8C1F16D7A3AB8E9D462A24EDC7541C0B6A1AEBFC",
                "a70669bc35a5d688c94f5db8e1eb4110295b1b076ccc3c8e4a7e9ee397a6ca41"
            ]
        }
    },
    "post_install": [
        "$outFile = \"$dir\\GuiConfigs\\CurrentSettings.ini\"",
        "Write-Output \"[Meta]`r`ncurrentStylesheet=Darker Style by TheMitoSan\" | Out-File $outFile -Encoding ascii"
    ],
    "persist": [
        "dev_hdd0",
        "GuiConfigs",
        "PS3UPDAT.PUP"
    ],
    "shortcuts": [
        [
            "rpcs3.exe",
            "RPCS3"
        ]
    ],
    "checkver": {
        "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/latest/",
        "re": "<a href=\".*/build-(?<commit>(?<cosi>\\w{8})\\w{32})/rpcs3-v((?<mainVersion>(\\d+\\.?){3}-(\\d{4}))-.*)_.*\">",
        "replace": "${mainVersion}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/download/build-$matchCommit/rpcs3-v$version-$matchCosi_win64.7z",
                "hash": {
                    "url": "https://github.com/RPCS3/rpcs3-binaries-win/releases/latest/",
                    "find": "<p>([A-f\\d]{64});.*</p>"
                }
            }
        }
    }
}
